@page "/difficile3"
@using QueteDuDragon.Data
@inject NavigationManager Navigation
@inject EtatJeu EtatJeu

@if (victory)
{
    <div class="victory-screen">
        <h2>Victoire</h2>
        <p>@victoryMessage</p>
        <button @onclick="QuitterJeu">Continuez</button>
    </div>
}
else if (gameOver)
{
    <div class="defeat-screen">
        <h2>Défaite</h2>
        <p>@defeatMessage</p>
        <button @onclick="QuitterJeu">Quitter</button>
    </div>
}
else
{
    <div class="dungeon">
        <h3>@combatMessage</h3>

        <div class="battle-container">
            <!-- Image du héros -->
            <div class="hero-container">
                <img src="Images/genie/@EtatJeu.SelectedHero.ImageName"alt="Héros" class="hero-image"/>
                <div class="skills-container">
                    @foreach (var skill in EtatJeu.SelectedHero.Skills)
                    {
                        <button @onclick="() => UseSkill(skill)">@skill</button>
                    }
                </div>
            </div>

            <!-- Image du monstre -->
            <div class="monster-container">
                <img src="images/Monstres/gobelins.png" alt="Gobelins" class="monster-image"/>
            </div>
        </div>
        

        <div class="action-buttons">
            <button @onclick="Retourner">Retour à l'exploration</button>
        </div>
    </div>
}

<style>
    .dungeon {
        width: 100%;
        height: 80vh;
        background-image: url('Images/battlemonstres.jpg');
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
    }

    .battle-container {
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: 80%;
    }

    .hero-container, .monster-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .hero-image, .monster-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    .skills-container {
        margin-top: 10px;
    }

    .skills-container button {
        margin: 5px;
        padding: 10px;
        background-color: #444;
        color: white;
        border: 1px solid white;
        border-radius: 5px;
        cursor: pointer;
    }

    .skills-container button:hover {
        background-color: #666;
    }

    .action-buttons {
        margin-top: 20px;
    }
    
     .defeat-screen, .victory-screen {
         display: flex;
         flex-direction: column;
         justify-content: center;
         align-items: center;
         height: 80vh;
         background-color: rgba(0, 0, 0, 0.8);
         color: white;
         text-align: center;
         padding: 20px;
         border-radius: 10px;
     }
     

    .hero-image, .monster-image {
        width: 200px;
        height: auto;
        margin: 10px;
    }

    

    button[style*="background-color: red"] {
        color: green;
        font-weight: bold;
        cursor: not-allowed;
    }
 
</style>

@code {
    private int chancesRestantes = 1;
    private int initialPointsVie;
    private bool gameOver = false;
    private bool victory = false;
    private int clicksToWin = 0;
    private string victoryMessage = "";
    private string defeatMessage = ""; // Message de défaite à afficher
    private string combatMessage = "Les gobelins vous encerclent. Chaque seconde compte ! Combattez-les pour survivre !";

    private void UseSkill(string skill)
    {
        if (skill == "Attaque de base" || skill == "Boule de feu" || skill == "Flèche empoisonnée")
        {
            combatMessage = $"Vous avez assené un coup dur au chef gobelin ! Continuez à l'attaquer, il est affaibli mais pas vaincu !";
            EtatJeu.SelectedHero.pointsVie += 4;
        }
        else if (skill == "Cri de guerre" || skill == "Soigné les blessés" || skill == "Disparition")
        {
            clicksToWin++;
            if (clicksToWin >= 2)
            {
                victory = true;
                victoryMessage = "Victoire. Vous avez vaincu le gobelin et Gagner des points de plus.";
                EtatJeu.SelectedHero.pointsVie += 4;
            }
            else 
            {
                combatMessage = "Tu infliges une bonne blessure au gobelin, mais il riposte avec rage ! Esquive sa hache qui s'abat sur toi !";
                
            }
        }
        else if (skill == "Coup de bouclier" || skill == "Bouclier magique" || skill == "Piège")
        {
            HandleDefeat();
            gameOver = true;
            defeatMessage =  "Les flèches du gobelin vous ont atteint. La défaite est amère, mais ce n'est qu'une étape. Continuez votre aventure.";
            
        }
    }
    protected override void OnInitialized()
    {
        if (EtatJeu.SelectedHero != null)
        {
            initialPointsVie = EtatJeu.SelectedHero.pointsVie;
        }
    }

    private void ResetPointsVie()
    {
        if (EtatJeu.SelectedHero != null)
        {
            EtatJeu.SelectedHero.pointsVie = initialPointsVie; // Réinitialisation des points de vie
            Console.WriteLine($"Points de vie réinitialisés à {initialPointsVie}.");
        }
    }

    
    private void HandleDefeat()
    {
        combatMessage = "Vous avez perdu contre le gobelin.";
        ResetPointsVie(); // Réinitialiser les points de vie après une défaite
    }


    private void QuitterJeu()
    {
        Navigation.NavigateTo("/mode-difficile");
    }

    private void Retourner()
    {
        
        Navigation.NavigateTo("/mode-difficile");
    }
        
    }
    
