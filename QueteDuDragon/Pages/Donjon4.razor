@page "/donjon4"
@using QueteDuDragon.Data
@using QueteDuDragon.Data.Heroes
@using QueteDuDragon.Data.Monstres
@inject NavigationManager Navigation
@inject EtatJeu EtatJeu

@if (victory)
{
    <div class="victory-screen">
        <h2>Victoire</h2>
        <p>@victoryMessage</p>
        <button @onclick="QuitterJeu">Continuez</button>
    </div>
}
else if (gameOver)
{
    <div class="defeat-screen">
        <h2>Défaite</h2>
        <p>@defeatMessage</p>
        <button @onclick="RestartGame">Recommencer</button>
        <button @onclick="QuitterJeu">Quitter</button>
    </div>
}
else
{
    <div class="dungeon">
        <h3>@combatMessage</h3>

        <div class="battle-container">
            <!-- Image du héros -->
            <div class="hero-container">
                <img src="Images/genie/@EtatJeu.SelectedHero.ImageName"alt="Héros" class="hero-image"/>
                <div class="skills-container">
                    @foreach (var skill in EtatJeu.SelectedHero.Skills)
                    {
                        <button @onclick="() => UseSkill(skill)">@skill</button>
                    }
                </div>
            </div>

            <!-- Image du monstre -->
            <div class="monster-container">
                <img src="images/Monstres/squelettes.png" alt="Squelettes" class="monster-image"/>
            </div>
        </div>

        <div class="popup" style="display: @(showPopup ? "block" : "none");">
            <p>@popupMessage</p>
        </div>

        <div class="action-buttons">
            <button @onclick="Retourner">Retour à l'exploration</button>
        </div>
    </div>
}

<style>
    .dungeon {
        width: 100%;
        height: 80vh;
        background-image: url('Images/combatCard.jpg');
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
    }

    .battle-container {
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: 80%;
    }

    .hero-container, .monster-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .hero-image, .monster-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    .skills-container {
        margin-top: 10px;
    }

    .skills-container button {
        margin: 5px;
        padding: 10px;
        background-color: #444;
        color: white;
        border: 1px solid white;
        border-radius: 5px;
        cursor: pointer;
    }

    .skills-container button:hover {
        background-color: #666;
    }

    .action-buttons {
        margin-top: 20px;
    }
    
     .defeat-screen, .victory-screen {
         display: flex;
         flex-direction: column;
         justify-content: center;
         align-items: center;
         height: 80vh;
         background-color: rgba(0, 0, 0, 0.8);
         color: white;
         text-align: center;
         padding: 20px;
         border-radius: 10px;
     }

    .combat-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .hero-image, .monster-image {
        width: 200px;
        height: auto;
        margin: 10px;
    }

    

    button[style*="background-color: red"] {
        color: green;
        font-weight: bold;
        cursor: not-allowed;
    }
 
</style>
<section>
    <div class="popup" style="display: @(showPopup ? "block" : "none");">
        <p>@popupMessage</p>
    </div>

   
</section>

@code {
    private int chancesRestantes = 1;
    private int initialPointsVie;
    private bool showPopup = false;
    private bool isButtonDisabled = false;
    private bool gameOver = false;
    private bool hasWon = false;
    private bool victory = false;
    private int clicksToWin = 0;
    private string popupMessage = "";
    private string victoryMessage = "";
    private string defeatMessage = ""; // Message de défaite à afficher
    private string combatMessage = "Une horde de squelettes vous assaille ! Leurs os craquent sous leurs coups. Vainquez-les pour quitter cet endroit maudit !";

    private void UseSkill(string skill)
    {
        if (skill == "Attaque de base" || skill == "Boule de feu" || skill == "Flèche empoisonnée")
        {
            combatMessage = $"Tes coups résonnent sur les os du squelette. Il vacille, mais ne lâche rien. Poursuis ton assaut !";
            EtatJeu.SelectedHero.pointsVie += 5;
        }
        else if (skill == "Cri de guerre" || skill == "Soigné les blessés" || skill == "Disparition")
        {
            clicksToWin++;
            if (clicksToWin >= 2)
            {
                hasWon = true;
                victory = true;
                victoryMessage ="Le squelette s'effondre sous tes coups. Tu l'as vaincu ! Féléctitations !";
                EtatJeu.SelectedHero.pointsVie += 5;
            }
            else 
            {
                combatMessage = "Ton coup atteint le squelette, mais il te riposte avec une force surprenante. Esquive son coup qui s'abat sur toi !";
                
            }
        }
        else if (skill == "Coup de bouclier" || skill == "Bouclier magique" || skill == "Piège")
        {
            HandleDefeat();
            gameOver = true;
            defeatMessage = "Le squelette t'a pris au dépourvu. Tu as été vaincu. Il faudra revenir plus fort pour le défier.";
            
        }
    }
    protected override void OnInitialized()
    {
        if (EtatJeu.SelectedHero != null)
        {
            initialPointsVie = EtatJeu.SelectedHero.pointsVie;
        }
    }

    private void ResetPointsVie()
    {
        if (EtatJeu.SelectedHero != null)
        {
            EtatJeu.SelectedHero.pointsVie = initialPointsVie; // Réinitialisation des points de vie
            Console.WriteLine($"Points de vie réinitialisés à {initialPointsVie}.");
        }
    }

    
    private async Task RestartGame()
    {
        if (chancesRestantes > 0)
        {
            chancesRestantes--;
            showPopup = true;
            //popupMessage = "Il vous reste 1 chance !";

            //fermature du pop up et retour au jeu
            await Task.Delay(1500);
            showPopup = false;
            if (EtatJeu.SelectedHero != null)
            {
                EtatJeu.SelectedHero.pointsVie = 5; // Réinitialisation des points de vie
            }

            // Rediriger vers la page actuelle pour relancer le jeu
            Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
        }
        else

        {
            isButtonDisabled = true;
            showPopup = true;
            popupMessage = "Vous n'avez plus de chances ! Veuillez recommencer la partie.";
        }
    }
    

    private void HandleDefeat()
    {
        combatMessage = "Vous avez perdu contre le squelette.";
        ResetPointsVie(); // Réinitialiser les points de vie après une défaite
    }


    private void QuitterJeu()
    {
        Navigation.NavigateTo("/mode-facile");
    }

    private void Retourner()
    {
        if (hasWon)
        {
            Console.WriteLine("Retour après la victoire, aucun point supplémentaire attribué.");
        }
        else
        {
            Console.WriteLine("Retour prématuré, aucun point attribué.");
            ResetPointsVie();
        }

        Navigation.NavigateTo("/mode-facile");
    }
        
    }
    
