@page "/map"

<div class="map">
    @for (int row = 0; row < 15; row++)
    {
    <div class="row">
        @for (int col = 0; col < 20; col++)
        {
        <div class="cell"></div>
        }
    </div>
    }
</div>

<style>
    .map {
        display: grid;
        grid-template-rows: repeat(15, 1fr);
        grid-template-columns: repeat(20, 1fr);
        width: 100%;
        height: 100%;
        background-color: lightgreen;
    }

    .row {
        display: contents;
    }

    .cell {
        border: 1px solid black;
        width: 30px;
        height: 30px;
    }
</style>